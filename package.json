{
  "name": "beasty-printer-hub",
  "version": "0.2.0",
  "description": "Smart home printer hub - prints tasks, shopping lists, WiFi QR codes, and more via Epson thermal printers.",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "bun run src/server.js",
    "dev": "bun --watch src/server.js",
    "build": "cd frontend && bun run build",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "lint": "bunx eslint \"src/**/*.js\" \"public/**/*.js\" \"scripts/**/*.js\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "ical.js": "^2.2.1"
  }
}
