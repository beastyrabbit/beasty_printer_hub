# Printer Hub Configuration
# Copy this file to .env and fill in your values

# ===================
# Donotick Connection
# ===================
DONOTICK_BASE_URL=http://your-donotick-server:2021
DONOTICK_USERNAME=your-username
DONOTICK_PASSWORD=your-password
# Or use token-based auth:
# DONOTICK_TOKEN=your-api-token

# ===================
# Printer Settings
# ===================
PRINTER_IP=192.168.1.100
PRINTER_PORT=9100

# ===================
# Schedule Settings
# ===================
DAILY_PRINT_TIME=08:00
WEEKLY_PRINT_TIME=08:00
WEEKLY_PRINT_DAY=1

# ===================
# Trash Calendar (optional)
# ===================
TRASH_ENABLE=true
TRASH_ICAL_URL=https://your-waste-management-ical-url

# ===================
# Server Settings
# ===================
PORT=3000
LOG_LEVEL=info
